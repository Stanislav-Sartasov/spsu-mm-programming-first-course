<Window x:Name="MainForm" x:Class="EighthTask.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EighthTask.WPF"
        mc:Ignorable="d"
        Title="Eighth task" Height="567" Width="870" ResizeMode="NoResize">
	<Grid HorizontalAlignment="Center" Height="513" Margin="0,10,0,0" VerticalAlignment="Top" Width="850">
		<Canvas x:Name="Canvas" HorizontalAlignment="Left" Height="500" Margin="10,0,0,0" VerticalAlignment="Center" Width="500"/>
		<DockPanel HorizontalAlignment="Left" Height="513" LastChildFill="False" Margin="551,0,0,0" VerticalAlignment="Center" Width="289">
			<DockPanel LastChildFill="False" DockPanel.Dock="Top" Height="199">
				<ComboBox x:Name="ComboBox" DockPanel.Dock="Top" Height="37"/>
				<Label Content="Label" Width="0"/>
				<Slider x:Name="Slider" DockPanel.Dock="Bottom" Height="36" Value="5" Minimum="1" Maximum="9" ValueChanged="SliderValueChanged"/>
				<Label x:Name="Label" Content="Масштаб: 1.0" DockPanel.Dock="Bottom" Height="27" HorizontalAlignment="Center"/>
			</DockPanel>
			<Button x:Name="Button" Content="Draw" DockPanel.Dock="Bottom" Height="55" Click="ButtonClick"/>
		</DockPanel>
	</Grid>
</Window>
